{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "#src/*": ["src/*"],
      "#shared/*": ["src/shared/*"],
      "#types/*": ["src/types/*"],
      "#modules/*": ["src/modules/*"]
    }
  },
  "include": ["src", "main.ts", "src/tests"],
  "exclude": ["node_modules", "dist"]
}
